@using QuickBite.Models
@model AdminViewModel

@{
    ViewData["Title"] = "Index";
}

<style>
    import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
    }

    .header-footer {
        background-color: #00a082;
        color: white;
        text-align: left;
        padding: 10px 10px;
        height: 70px;
    }

    .container {
        width: 90%;
        margin: 0 auto;
        max-width: 1200px;
        text-align: center;
        padding: 20px 0;
    }

    h1 {
        font-size: 32px;
        font-weight: 500;
        color: #ffffff;
    }

    .lists {
        display: flex;
        margin-top: 10px;
        flex-wrap: wrap;
        justify-content: space-around;
        height: 450px;
    }

    .list {
        background-color: white;
        border: 1px solid #232222;
        border-radius: 5px;
        margin: 10px;
        padding: 10px;
        flex: 1;
        min-width: 280px;
        max-width: 30%;
        height: 450px;
        overflow-y: auto;
    }

    h2 {
        font-size: 1.2em;
        color: #333;
    }

    .lists ul {
        margin-top: 20px;
        list-style-type: none;
        padding: 0;
    }

    .lists li {
        background-color: #00a082;
        color: white;
        margin: 5px 0;
        padding: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-radius: 3px;
    }

        .lists li span {
            background-color: white;
            color: #00a082;
            padding: 5px 10px;
            border-radius: 3px;
        }

    button {
        background-color: #029a23;
        color: white;
        border: 2px solid #232222;
        border-radius: 3px;
        padding: 10px;
        cursor: pointer;
    }

        button.remove {
            background-color: #ff4444;
            border: 2px solid #232222;
            padding: 5px 10px;
        }

        button:hover {
            opacity: 0.8;
        }

    #restaurants {
        height: 400px;
    }

    body::after {
        content: "";
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 10%;
        background-color: #00a082;
        z-index: -1;
    }

    .buttons {
        position: absolute;
        margin-left: 27.5%;
        bottom: 19%;
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        padding-top: 120px;
        left: 0;
        top: 0;
        width: 100%;
        justify-content: space-between;
        height: 700px;
        overflow: auto;
    }

    .modal-content {
        background-color: #fefefe;
        text-align: left;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
        max-width: 500px;
        border-radius: 10px;
    }

        .modal-content label {
            display: block;
            margin-bottom: 10px;
        }

        .modal-content input,
        .modal-content select,
        .modal-content button {
            width: calc(100% - 60px);
            margin-top: 20px;
            margin-bottom: 20px;
            padding: 10px;
        }

        .modal-content button {
            width: auto;
        }

    .list::-webkit-scrollbar {
        width: 8px;
    }

    .list::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }

    .list::-webkit-scrollbar-thumb {
        background: #00a082;
        border-radius: 10px;
    }

        .list::-webkit-scrollbar-thumb:hover {
            background: #029a23;
        }

    .list::-webkit-scrollbar-corner {
        background: transparent;
    }

    .list {
        scrollbar-width: thin;
        scrollbar-color: #00a082 #f1f1f1;
    }
</style>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="adminstyle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <title>Admin Panel Design</title>
</head>
<body>
    <div>
        <div class="lists">
            <div class="list" id="users">
                <h2>Korisničko ime/broj narudžbi</h2>
                <ul>
                    @foreach (var item in Model.Korisnici) {
                        <li>@item.UserName <span>@item.BrojNarudzbi</span></li>
                    }
                </ul>
            </div>
            <div class="list" id="couriers">
                <h2>Kuriri</h2>
                <ul>
                    @foreach (var item in Model.Kuriri)
                    {
                        <li>
                            @item.UserName
                            <form asp-action="DeleteCourier" asp-route-id="@item.Id" method="post" style="display:inline;">
                                <button type="submit" class="remove">Ukloni</button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
            <div class="list" id="restaurants">
                <h2>Ugostiteljske jedinice</h2>
                <ul>
                    @foreach (var item in Model.UsluzneJedinice)
                    {
                        <li>
                            @item.Naziv.
                            <form asp-action="Delete" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="remove">Ukloni</button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="buttons">
            <span style="margin-left: 400px;"></span>
            <button onclick="showAddRestaurantModal()">Dodaj novo mjesto</button>
        </div>
        <div id="addRestaurantModal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="hideAddRestaurantModal()">&times;</span>
                <h2>Dodaj novo mjesto</h2>
                <form asp-action="Create" method="post">
                    <label for="Naziv">Naziv:</label>
                    <input type="text" name="Naziv" id="Naziv" required /><br />
                    <label for="Adresa">Adresa:</label>
                    <input type="text" name="Adresa" id="Adresa" required /><br />
                    <label for="TipUsluge">Tip Usluge:</label>
                    <select name="TipUsluge" id="TipUsluge" required>
                        <option value="Restorani">Restorani</option>
                        <option value="Supermarketi">Supermarketi</option>
                        <option value="BrzaHrana">Brza Hrana</option>
                    </select><br />
                    <button type="submit">Dodaj</button>
                    <button type="button" onclick="hideAddRestaurantModal()">Otkaži</button>
                </form>
            </div>
        </div>
    </div>

    <script>
            function showAddRestaurantModal() {
                document.getElementById('addRestaurantModal').style.display = 'block';
            }

            function hideAddRestaurantModal() {
                document.getElementById('addRestaurantModal').style.display = 'none';
            }

            window.onclick = function (event) {
                var restaurantModal = document.getElementById('addRestaurantModal');
                if (event.target == restaurantModal) {
                    restaurantModal.style.display = "none";
                }
            }

            document.getElementById('addRestaurantForm').addEventListener('submit', function (event) {
                event.preventDefault();
                var formData = new FormData(this);

                fetch('@Url.Action("Create", "Admin")', {
                    method: 'POST',
                    body: formData,
                })
                    .then(response => {
                        if (response.ok) {
                            location.reload();
                        } else {
                            response.text().then(text => alert(text));
                        }
                    })
                    .catch(error => console.error('Error:', error));
            });
    </script>
</body>
</html>
