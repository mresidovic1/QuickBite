@model IEnumerable<QuickBite.Models.Narudzba>

@{
    ViewData["Title"] = "Index";
}

<style>
import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
    }

    .container {
        width: 90%;
        margin: 0 auto;
        max-width: 1200px;
        text-align: center;
        padding: 20px 0;
    }

    h1 {
        font-size: 32px;
        font-weight: 500;
        color: #ffffff;
    }

    .lists {
        display: flex;
        margin-top: 10px;
        flex-wrap: wrap;
        justify-content: space-between;
        height: 500px;
    }

    .list {
        background-color: white;
        border: 1px solid #232222;
        border-radius: 5px;
        margin: 10px;
        padding: 10px;
        flex: 1;
        min-width: 280px;
        max-width: 100%;
        height: 500px;
    }

    h2 {
        font-size: 1.2em;
        color: #333;
    }

    .lists ul {
        margin-top: 10px;
        list-style-type: none;
        padding: 0;
    }

    .lists li {
        background-color: white;
        color: white;
        margin: 2px 2px;
        padding: 2px;
        display: flex;
        justify-content: space-between;
        align-items: left;
        border: 2px solid black;
        border-radius: 3px;
        width: 100%;
       
    }

        .lists li span {
            background-color: white;
            color: black;
            padding: 5px 10px;
            border-radius: 3px;
        }

    .lists span.item {
        margin-right: 2px;
        width: 120px;
        background-color: #00a082;
        color: white;
        flex-grow: 1;
        padding: 5px 10px;
        border-radius: 3px;
    }

    button {
        background-color: #029a23;
        color: white;
        border: 2px solid #232222;
        border-radius: 3px;
        padding: 5px 10px;
        cursor: pointer;
    }

        button.preuzmi {
            background-color: #029a23;
        }

        button.odbij {
            background-color: #ff4444;
        }

        button.dostavljeno {
            background-color: #3fb4ae;
        }

        button.mapa {
            background-color: #3fb4ae;
        }

        button:hover {
            opacity: 0.8;
        }

    #couriers, #restaurants {
        height: 450px;
    }

    body::after {
        content: "";
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 70px;
        background-color: #00a082;
        z-index: -1;
    }

    .buttons {
        position: absolute;
        margin-left: 350px;
        bottom: 120px;
    }

    .lists li button {
        white-space: nowrap;
        flex-shrink: 0;
        margin-left: 5px;
    }

</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="kurirstyle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <title>Kurir Panel Design</title>
</head>
<body>
    <div>
        <div class="lists">
            <div class="list" id="users">
                <h2>Aktivne narudžbe</h2>
                <ul>
                    @foreach (var narudzba in Model)
                    {
                        <li>
                            <span class="item">@narudzba.Korisnik.UserName</span>
                            <span class="item">@narudzba.UsluznaJedinica.Naziv</span>
                            <span class="item">@narudzba.Korisnik.Adresa</span>
                            <button class="preuzmi">Preuzmi</button>
                            <button class="odbij">Odbij</button>
                            <button class="dostavljeno">Dostavljeno</button>
                            <button class="mapa">Prikaži na mapi</button>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</body>
</html>