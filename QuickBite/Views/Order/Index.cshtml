@model IEnumerable<QuickBite.Models.Narudzba>

@{
    ViewData["Title"] = "Index";
}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: Arial, sans-serif;
        background: #FFFFFF;
    }

    .top-bar {
        width: 100%;
        background: #66CDAA;
        padding: 20px;
        text-align: left;
    }

    .logo {
        color: white;
        font-size: 24px;
        font-weight: bold;
    }

    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .order-summary {
        display: flex;
        justify-content: space-between;
        width: 100%;
        border-bottom: 1px solid #ccc;
        padding-bottom: 20px;
    }

    .order-details {
        flex: 1;
    }

    .summary-item {
        margin-bottom: 10px;
    }

        .summary-item label {
            margin-right: 10px;
            font-weight: bold;
        }

    .product-list {
        flex: 1;
    }

    .product-header {
        display: flex;
        justify-content: space-between;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .product-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 5px;
    }

        .product-item input {
            flex: 1;
            text-align: center;
            margin-right: 5px;
            padding: 5px;
        }

            .product-item input[type="text"] {
                border: 1px solid #ccc;
                background: #f4f4f4;
                text-align: right;
                padding: 5px;
            }

    .payment-method {
        display: flex;
        align-items: center;
        margin-top: 20px;
        width: 100%;
    }

        .payment-method .image-item {
            margin-right: 20px;
        }

    .payment-options {
        margin-left: 20px;
    }

        .payment-options p {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .payment-options label {
            display: block;
            margin-bottom: 5px;
        }

    .cart-image {
        width: 100px;
        height: 100px;
        float: left;
        margin-right: 10px;
    }

    .bottom-bar {
        width: 100%;
        background: #66CDAA;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
    }

    .back-button,
    .confirm-button {
        color: white;
        font-size: 2.2rem;
        background: none;
        border: none;
        cursor: pointer;
    }

</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuickBite</title>
    <link rel="stylesheet" href="košarica.css">
</head>
<body>
    
    <div class="top-bar">
        <div class="logo">QuickBite</div>
    </div>

    <div class="container">
        <div class="order-summary">
            <div class="order-details">
                <div class="summary-item">
                    <label for="total-order">Ukupan iznos narudžbe:</label>
                    <input type="text" id="total-order" readonly> KM
                </div>
                <div class="summary-item">
                    <label for="discount">Ostvareni popust:</label>
                    <input type="text" id="discount" readonly> KM
                </div>
                <div class="summary-item">
                    <label for="total">Ukupno:</label>
                    <input type="text" id="total" readonly> KM
                </div>
            </div>
            <div class="product-list">
                <div class="product-header">
                    <span>Proizvod</span>
                    <span>Količina</span>
                    <span>Cijena</span>
                </div>
                <div class="product-item">
                    <input type="text" readonly placeholder="Proizvod">
                    <input type="text" readonly placeholder="Količina">
                    <input type="text" readonly placeholder="Cijena"> KM
                </div>
                <div class="product-item">
                    <input type="text" readonly placeholder="Proizvod">
                    <input type="text" readonly placeholder="Količina">
                    <input type="text" readonly placeholder="Cijena"> KM
                </div>
                <div class="product-item">
                    <input type="text" readonly placeholder="Proizvod">
                    <input type="text" readonly placeholder="Količina">
                    <input type="text" readonly placeholder="Cijena"> KM
                </div>
            </div>
        </div>

        <div class="payment-method">
            <div class="image-item">
                <img src="images/kosarica.jpg" alt="kosarica" class="image-item responsive" style="width: 100px; height: 100px;">
            </div>
            <div class="payment-options">
                <p>Izaberite način plaćanja:</p>
                <label>
                    <input type="radio" name="payment" value="gotovina" checked>
                    GOTOVINA
                </label>
                <label>
                    <input type="radio" name="payment" value="kartica">
                    KARTICA
                </label>
            </div>
        </div>
    </div>

    <div class="bottom-bar">
        <button class="back-button">←</button>
        <button class="confirm-button">✓</button>
    </div>
</body>
</html>
