﻿@model IEnumerable<QuickBite.Models.Narudzba>

@{
    ViewData["Title"] = "Index";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start; 
        min-height: 100vh;
        background: #FFFFFF;
        overflow-y: auto; 
    }

    .container {
        max-width: 1200px;
        width: 95%;
        padding: 0 10px;
        margin-bottom: 60px; 
    }

    .slider-wrapper {
        position: relative;
        width: 100%;
    }

    .top-bar {
        width: 100%;
        background: #66CDAA;
        padding: 20px;
        text-align: left;
    }

        .top-bar .logo {
            color: white;
            font-size: 24px;
            font-weight: bold;
        }

    .slider-wrapper .image-list {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-gap: 18px;
        margin-top: 30px;
    }

        .slider-wrapper .image-list .image-item {
            width: 100%; 
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            position: relative;
        }

            .slider-wrapper .image-list .image-item .responsive {
                width: 200px; 
                height: 200px; 
                object-fit: cover; 
            }

            .slider-wrapper .image-list .image-item .caption {
                margin-top: 10px;
                font-size: 1rem;
                color: #333;
            }

            .slider-wrapper .image-list .image-item .add-button {
                margin-top: 10px;
                background-color: rgba(255, 255, 255, 0.8);
                border: none;
                font-size: 1rem;
                padding: 5px 10px;
                cursor: pointer;
                border-radius: 4px;
            }

                .slider-wrapper .image-list .image-item .add-button:hover {
                    background-color: rgba(255, 255, 255, 1);
                }

    .bottom-bar {
        width: 100%;
        background: #66CDAA;
        padding: 10px;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        position: fixed;
        bottom: 0;
        left: 0;
    }

        .bottom-bar .back-button {
            color: white;
            font-size: 2.2rem;
            background: none;
            border: none;
            cursor: pointer;
        }

</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuickBite</title>
    <link rel="stylesheet" href="itemview.css">
</head>
<body>
    <div class="top-bar">
        <div class="logo">QuickBite</div>
    </div>
    <div class="container">
        <div class="slider-wrapper">
            <div class="image-list">
                <div class="image-item">
                    <img src="images/burgerkfc.jpg" alt="burgerkfc" class="responsive">
                    <div class="caption">Burger<br>6.00 KM</div>
                    <button class="add-button">DODAJ</button>
                </div>
                <div class="image-item">
                    <img src="images/burger_wrap_box.jpg" alt="Burger wrapbox" class="responsive">
                    <div class="caption">Burger wrap box<br>6.00 KM</div>
                    <button class="add-button">DODAJ</button>
                </div>
                <div class="image-item">
                    <img src="images/kentucky_piletina.jpg" alt="Piletina" class="responsive">
                    <div class="caption">Kentucky piletina<br>8.00 KM</div>
                    <button class="add-button">DODAJ</button>
                </div>
                <div class="image-item">
