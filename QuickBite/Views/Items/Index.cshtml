@using QuickBite.Models
@model List<Proizvod>

@{
    ViewData["Title"] = "Index";
}

<style>
    .index-page * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .index-page body {
        display: flex;
        width: 100%;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start; 
        min-height: 100vh;
        background: #FFFFFF;
        overflow-y: auto; 
    }

    .index-page .container {
        margin-top: 30px;
        max-width: 100%;
        width: 100%;
        padding: 0 10px;
        margin-bottom: 60px; 
    }

    .index-page .slider-wrapper {
        margin-top: 30px; !important
        position: relative;
        width: 100%;
    }

    .index-page .slider-wrapper .image-list {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-gap: 18px;
        margin-top: 30px;
    }

    .index-page .slider-wrapper .image-list .image-item {
            width: 100%; 
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            position: relative;
        }

    .index-page .slider-wrapper .image-list .image-item .responsive {
                border: solid 2px #00a082;
                border-radius: 8px;
                width: 200px; 
                height: 200px; 
                object-fit: cover; 
            }

    .index-page .slider-wrapper .image-list .image-item .caption {
                font-family: 'Great Vibes', cursive;
                font-style: italic;
                font-weight: 400;
                margin-top: 2px;
                font-size: 28px;
                color: #333;
            }

    .index-page .slider-wrapper .image-list .image-item .add-button {
                margin-top: 2px;
                background-color: #00a082;
                border: solid 2px #000;
                color: #FFF;
                font-size: 1rem;
                padding: 5px 10px;
                cursor: pointer;
                border-radius: 8px;
            }

    .index-page .slider-wrapper .image-list .image-item .add-button:hover {
                    background-color: rgba(255, 255, 255, 1);
                }

    .index-page .bottom-bar {
        width: 100%;
        background: #66CDAA;
        padding: 10px;
        display: flex;
        height: 10%;
        justify-content: flex-start;
        align-items: center;
        position: fixed;
        bottom: 0;
        left: 0;
    }

        .index-page .bottom-bar .back-button {
            color: white;
            font-size: 2.2rem;
            background: none;
            border: none;
            cursor: pointer;
        }

</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0">
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">
    <title>QuickBite</title>
    <link rel="stylesheet" href="itemview.css">
</head>
<body class="index-page">
    <div class="container">
        <div class="slider-wrapper">
            <div class="image-list">
                @foreach (var item in Model)
                {
                    <div class="image-item">
                        <img src="~/images/@(item.Naziv).jpg" alt="@item.Naziv" class="image-item responsive">
                        <div class="caption">@item.Naziv</div>
                        <button class="add-button">DODAJ</button>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="bottom-bar">
        <button class="back-button material-symbols-rounded">arrow_back</button>
    </div>
</body>
</html>